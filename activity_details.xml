<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/personl"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/named"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/personl"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/personl"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/named"
        android:text=" "
        android:textColor="@color/user"
        android:textSize="20dp"
        tools:ignore="SpeakableTextPresentCheck" />
    <TextView
        android:id="@+id/maild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mail : "
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/named"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/usermail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/named"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/maild"
        android:text=" "
        android:textColor="@color/user"
        android:textSize="20dp"
        tools:ignore="SpeakableTextPresentCheck" />
    <ImageView
        android:id="@+id/logoutd"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/logoutd"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"/>
</RelativeLayout>